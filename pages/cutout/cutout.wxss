.bg {
    min-height: 100vh;
    background-color: #000;
    overflow: hidden;
    position: relative;
}

/* 底部按钮 */

.makeBtn {
    width: 100%;
    height: 120rpx;
    background: #252525;
    line-height: 120rpx;
    text-align: center;
    color: #fff;
    font-size: 40rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 0 98rpx 0 98rpx;
    z-index: 9999;
}

.changePic, .makingView {
    width: 134rpx;
    height: 120rpx;
}

.makeBtn image {
    width: 42rpx;
    height: 42rpx;
    vertical-align: middle;
    margin-right: 12rpx;
}

.wushijifen {
    width: 126rpx;
    height: 44rpx;
    background: linear-gradient(to right, #d16fff, #d143ff, #cb01f3);
    border-radius: 28rpx;
    font-size: 28rpx;
    line-height: 44rpx;
    margin-left: 18rpx;
}

/* 移动区域 */

.contentWarp {
    position: absolute;
    width: 3000px;
    height: 3000px;
    z-index: 0;
}

.canMoveArea {
    width: 3000px;
    height: 3000px;
}

.touchWrap {
    transform-origin: center;
    position: absolute;
    z-index: 100;
}

.imgWrap {
    box-sizing: border-box;
    width: 100%;
    transform-origin: center;
    float: left;
    border: 5rpx transparent dashed;
}

.imgWrap image {
    float: left;
}

.touchActive .x {
    display: block;
}

.touchActive .o {
    display: block;
}

.x {
    position: absolute;
    top: -25rpx;
    left: -25rpx;
    z-index: 500;
    display: none;
    width: 50rpx;
    height: 50rpx;
    overflow: hidden;
    font-weight: bold;
    color: #d1e3f1;
}

.o {
    position: absolute;
    bottom: -25rpx;
    right: -25rpx;
    width: 50rpx;
    height: 50rpx;
    text-align: center;
    display: none;
    overflow: hidden;
    font-weight: bold;
    color: #d1e3f1;
}

.active {
    background-color: rgb(78, 114, 151);
}

.active view {
    border: none;
}

.touchActive {
    /* border: 4rpx #fff dashed; *//* z-index: 400; */
}

/* 积分mask */

.jifenMask {
    width: 100%;
    height: 100vh;
    position: absolute;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
}

.maskBody {
    width: 600rpx;
    height: 710rpx;
    background: #fff;
    border-radius: 20rpx;
    overflow: hidden;
    text-align: center;
}

.adView {
    width: 100%;
    padding: 0 88rpx 0 110rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 60rpx;
}

.shareBtn {
    position: relative;
}

.adView image {
    width: 128rpx;
    height: 128rpx;
}

.maskBotAdView {
    width: 520rpx;
    height: 128rpx;
    margin: 64rpx auto 0;
}

/* 底部分类 */

.classBotView {
    width: 730rpx;
    margin: 6rpx 0 0 20rpx;
    z-index: 9999;
}

.txtClass {
    width: 100%;
    height: 56rpx;
    text-align: center;
    line-height: 56rpx;
    overflow: hidden;
    white-space: nowrap;
}

.classTxtItem {
    margin-right: 40rpx;
    color: #9b9b9b;
    font-size: 32rpx;
}

.selectTxt {
    color: #fff;
    font-size: 40rpx;
}

.scroll-view {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.classPicList {
    margin-top: 6rpx;
}

.classPicItem {
    margin-right: 16rpx;
}

.classPicItem image {
    width: 84rpx;
    height: 114rpx;
    vertical-align: top;
}

.slectPic image {
    border: 4rpx solid #f80d7f;
}

